@page
@model TP_1.Pages.ProdutosModel
@{
    ViewData["Title"] = "Produtos";
}

<h1>Produtos</h1>

<div class="row">
    @foreach (var produto in Model.Produtos)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="/@produto.ImagemPath" class="card-img-top" alt="Imagem do Produto" style="width: 100%; height: 200px;">
                <div class="card-body">
                    <h5 class="card-title">@produto.Nome</h5>
                    <p class="card-text">@produto.Descricao</p>
                    <p class="card-text">Preço: @produto.Preco.ToString("C")</p>
                    <a href="@Url.Page("Details", new { id = produto.Id })" class="btn btn-primary">Detalhes</a>
                </div>
            </div>
        </div>
    }
</div>
